{
  "type": "document",
  "_meta": {
    "url": "http://116.203.102.205/api/schema/",
    "title": "Healthsites API Version 2 Schema"
  },
  "facilities": {
    "create": {
      "type": "link",
      "url": "/api/v2/facilities",
      "action": "post",
      "encoding": "application/json",
      "description": "Create new facility.",
      "fields": [
        {
          "name": "name",
          "required": true,
          "type": "string",
          "description": "Locality name"
        },
        {
          "name": "latitude",
          "required": true,
          "type": "number",
          "description": "Latitude position of healthsite"
        },
        {
          "name": "longitude",
          "required": true,
          "type": "number",
          "description": "Longitude position of healthsite"
        },
        {
          "name": "attributes",
          "type": "object",
          "properties": {
            "activities": {
              "name": "activities",
              "type": "array",
              "description": "Activity for this healthsite.",
              "enum": [
                "medicine and medical specialties",
                "surgery and surgical specialties",
                "Maternal and women health",
                "pediatric care"
              ],
              "contains": {
                "type": "string"
              }
            },
            "physical_address": {
              "name": "physical_address",
              "type": "string",
              "description": "Full address of healthsite"
            },
            "ancillary_services": {
              "name": "ancillary_services",
              "type": "array",
              "description": "Ancillary services for this healthsite.",
              "enum": [
                "Operating theater",
                "laboratory",
                "imaging equipment",
                "intensive care unit"
              ],
              "contains": {
                "type": "string"
              }
            },
            "notes": {
              "name": "notes",
              "type": "array",
              "description": "Notes for this healthsite.",
              "enum": [
                "Outpatient consultation",
                "In-patient hospitalization"
              ],
              "contains": {
                "type": "string"
              }
            },
            "tags": {
              "name": "tags",
              "type": "array",
              "description": "Tag for this healthsite.",
              "contains": {
                "type": "string"
              }
            },
            "scope_of_service": {
              "name": "scope_of_service",
              "type": "array",
              "description": "Scope of services for this healthsite.",
              "enum": [
                "specialized care",
                "general acute care",
                "rehabilitation care",
                "old age/hospice care"
              ],
              "contains": {
                "type": "string"
              }
            },
            "ownership": {
              "name": "ownership",
              "type": "string",
              "enum": [
                "public",
                "private not for profit",
                "private commercial"
              ],
              "description": "ownership for this healthsite"
            },
            "staff": {
              "name": "staff",
              "type": "object",
              "properties": {
                "nurses": {
                  "name": "nurses",
                  "type": "integer",
                  "description": "Number of nurses"
                },
                "doctors": {
                  "name": "doctors",
                  "type": "integer",
                  "description": "Number of doctors"
                }
              }
            },
            "inpatient_service": {
              "name": "inpatient_service",
              "type": "object",
              "properties": {
                "full_time_beds": {
                  "name": "full_time_beds",
                  "type": "integer",
                  "description": "Number of full time bed"
                },
                "part_time_beds": {
                  "name": "part_time_beds",
                  "type": "integer",
                  "description": "Number of part time bed"
                }
              }
            },
            "nature_of_facility": {
              "name": "nature_of_facility",
              "type": "string",
              "enum": [
                "clinic without beds",
                "clinic with beds",
                "first referral hospital",
                "second referral hospital or General hospital",
                "tertiary level including University hospital"
              ],
              "description": "nature of facility for this healthsite"
            },
            "defining_hours": {
              "name": "defining_hours",
              "type": "object",
              "properties": {
                "monday": {
                  "name": "monday",
                  "type": "array",
                  "description": "Opening hours in monday.",
                  "contains": {
                    "type": "string"
                  }
                },
                "tuesday": {
                  "name": "tuesday",
                  "type": "array",
                  "description": "Opening hours in tuesday.",
                  "contains": {
                    "type": "string"
                  }
                },
                "wednesday": {
                  "name": "wednesday",
                  "type": "array",
                  "description": "Opening hours in wednesday.",
                  "contains": {
                    "type": "string"
                  }
                },
                "thursday": {
                  "name": "thursday",
                  "type": "array",
                  "description": "Opening hours in thursday.",
                  "contains": {
                    "type": "string"
                  }
                },
                "friday": {
                  "name": "friday",
                  "type": "array",
                  "description": "Opening hours in friday.",
                  "contains": {
                    "type": "string"
                  }
                },
                "saturday": {
                  "name": "saturday",
                  "type": "array",
                  "description": "Opening hours in saturday.",
                  "contains": {
                    "type": "string"
                  }
                },
                "sunday": {
                  "name": "sunday",
                  "type": "array",
                  "description": "Opening hours in sunday.",
                  "contains": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      ]
    }
  }
}